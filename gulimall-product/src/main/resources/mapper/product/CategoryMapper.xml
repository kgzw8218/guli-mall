<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzl.gulimall.product.mapper.CategoryMapper">
    
    <resultMap type="com.zzl.gulimall.product.domain.Category" id="CategoryResult">
        <result property="catId"    column="cat_id"    />
        <result property="name"    column="name"    />
        <result property="parentCid"    column="parent_cid"    />
        <result property="catLevel"    column="cat_level"    />
        <result property="showStatus"    column="show_status"    />
        <result property="sort"    column="sort"    />
        <result property="icon"    column="icon"    />
        <result property="productUnit"    column="product_unit"    />
        <result property="productCount"    column="product_count"    />
    </resultMap>

    <sql id="selectCategoryVo">
        select cat_id, name, parent_cid, cat_level, show_status, sort, icon, product_unit, product_count from pms_category
    </sql>

    <select id="selectCategoryList" parameterType="com.zzl.gulimall.product.domain.Category" resultMap="CategoryResult">
        <include refid="selectCategoryVo"/>
        <where>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="parentCid != null "> and parent_cid = #{parentCid}</if>
            <if test="catLevel != null "> and cat_level = #{catLevel}</if>
            <if test="showStatus != null "> and show_status = #{showStatus}</if>
            <if test="sort != null "> and sort = #{sort}</if>
            <if test="icon != null  and icon != ''"> and icon = #{icon}</if>
            <if test="productUnit != null  and productUnit != ''"> and product_unit = #{productUnit}</if>
            <if test="productCount != null "> and product_count = #{productCount}</if>
        </where>
    </select>
    <select id="list" resultType="com.zzl.gulimall.product.domain.Category">
        select * from pms_category
    </select>

</mapper>